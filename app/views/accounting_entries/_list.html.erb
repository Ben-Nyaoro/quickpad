<table class="table table-bordered table-sm">
	<thead>
		<tr>
			<th>Ref Number</th>
			<th>Date Prepared</th>
			<th>Date Posted</th>
			<th>Particulars</th>
			<th>Status</th>
			<th>Book</th>
			<th>Action</th>
			<%# <th>&nbsp;</th> %>
		</tr>
	</thead>
	<tbody>
		<% @accounting_entries.each do |accounting_entry| %>
			<tr>
				<td><%= accounting_entry.ref_number %></td>
				<td><%= accounting_entry.date_prepared %></td>
				<td><%= accounting_entry.date_posted %></td>
				<td><%= accounting_entry.particular %></td>
				<td><%= accounting_entry.status %></td>
				<td><%= accounting_entry.book %></td>
				<td>
			<li class="nav-item dropdown list-inline">
				<%= image_tag "downarrow.png", class: "icon dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
				<ul class="dropdown-menu">
					<%= link_to 'View', accounting_entry_path(accounting_entry.id), class: "dropdown-item caret"  %>
					<%= link_to 'Edit', edit_accounting_entry_path(accounting_entry.id), class: "dropdown-item caret"  %>
					<%= link_to 'Delete', accounting_entry_path(accounting_entry.id), method: :delete, data: {confirm: "Are you sure?"}, class: "dropdown-item caret" %>
				</ul>
			</li>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
