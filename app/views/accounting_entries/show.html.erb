<h3>Accounting Entry</h3>
	<ul class="list-inline">
		<li><b>Reference no:</b> <%= @accounting_entry.ref_number %></li>
		<li><b>Date Prepared:</b> <%= @accounting_entry.date_prepared.strftime(" %a, %e %b %Y") %></li>
		<b>Status:</b> <%= @accounting_entry.status %></li>
	</ul>
	<div  data-controller="approve">
		<hr>
			<% if @accounting_entry.pending? %>
				<button class="btn btn-outline-success" id="btn-approve" data-approve-target="btn-approve" data-action="click->approve#approveEntry">
						Approve
				</button>
				<span class = "" data-approve-target="approve-method"><%= @approve_entry %></span>
				<button class="btn btn-outline-danger" id="btn-reject" data-approve-target="btn-reject" data-action="click->approve#rejectEntry">
						Reject
				</button>
			<% else %>
				<button class="btn btn-outline-dark" disabled>
					Approved
				</button>
			<% end %>
		<hr>
		<%= render "approve" %>
	</div>


